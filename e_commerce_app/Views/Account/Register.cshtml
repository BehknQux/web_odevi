@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    var errorText = @ViewBag.Error;
}

<section class="py-5">
    <div class="container-fluid">
        <div class="d-flex justify-content-center">
            <div class="col-md-4">
                <div class="card shadow-lg rounded-5">
                    <div class="card-header text-center bg-dark text-white">
                        <h3>Register</h3>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Register" asp-controller="Account" method="post">
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control form-control-lg" name="username" id="username" placeholder="Enter your name" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control form-control-lg" name="email" id="email" placeholder="Enter your email" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control form-control-lg" name="password" id="password" placeholder="Enter your password" required>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-dark btn-lg">Register</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <a href="/Account/Login" class="text-muted" id="forgotPasswordLink">Do you have an account?</a>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    
    <div class="mt-5 d-flex justify-content-center">
        @errorText
    </div>
</section>