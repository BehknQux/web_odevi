@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml"; // Login Layout kullanımı
}

<section class="py-5">
    <div class="container-fluid">
        <div class="d-flex justify-content-center">
            <div class="col-md-4">
                <div class="card shadow-lg rounded-5">
                    <div class="card-header text-center bg-dark text-white">
                        <h3>Login</h3>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Login" asp-controller="Account" method="post">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control form-control-lg" name="email" id="email" placeholder="Enter your email" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control form-control-lg" name="password" id="password" placeholder="Enter your password" required>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-dark btn-lg">Login</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <a href="/Account/ForgotPassword" class="text-muted" id="forgotPasswordLink">Forgot Password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
